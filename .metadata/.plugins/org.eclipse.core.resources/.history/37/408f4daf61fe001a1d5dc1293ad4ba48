	 * KitDetail(); mykit.setProductId(productId); mykit.setQuantity(pquantity);
	 * mykit.setAmount(pquantity*pcost); mykit.setCoronaKitId(productId);
	 * mykit.setId(productId);
	 * 
	 * System.out.println("mykit is: "+ mykit); return "show-all-item-user"; }
	 */
	@RequestMapping("/add-to-cart")
	public String addToKit(@RequestParam("productId") String productId, @RequestParam("quantity") String pquantity, @RequestParam("pcost") String pcost) {
		System.out.println("quantity is: "+ pquantity);
		KitDetail mykit = new KitDetail();
		mykit.setProductId(Integer.parseInt(productId));
		mykit.setQuantity(Integer.parseInt(pquantity));
		mykit.setAmount(Integer.parseInt(pquantity)*Integer.parseInt(pcost));
		mykit.setCoronaKitId(Integer.parseInt(productId));
		mykit.setId(Integer.parseInt(productId));
		
		System.out.println("mykit is: "+ mykit);
		return "show-all-item-user";
	}
	
