<%@ page language="java" contentType="text/html; charset=ISO-8859-1"
    pageEncoding="ISO-8859-1"%>
<%@ taglib prefix="c" uri="http://java.sun.com/jstl/core_rt" %> 
<%@ taglib uri="http://www.springframework.org/tags/form"  prefix="spring-form"%>
<!DOCTYPE html>
<html>
<head>
<meta charset="ISO-8859-1">
<title>Insert title here</title>
</head>
<body>
<nav>
	<jsp:include page="${pageContext.request.contextPath}/header" />
</nav>
<section class="container-fluid p-4">
	<c:choose>
		<c:when test="${kit == null || kit.isEmpty() }">
			<p class="well well-info">No products Found!</p>
		</c:when>
		<c:otherwise>
			<table class="table table-striped table-hover table-border">
				<tr>
					<th>KitId</th>
					<th>CoronaKitId</th>
					<th>ProductId</th>
					<th>Quantity</th>
					<th>Amount</th>
				</tr>
				<c:forEach items="${kit }" var="kit">
					<tr>
						<td>${kit.id }</td>
						<td>${kit.coronaKitId }</td>
						<td>${kit.productId }</td>
						<td><input type="number" id="quant" value="${kit.quantity }" oninput="newamt()"></td>
						<td><input type="number" id="amt" value="${kit.amount}"></td>
				</c:forEach>
			</table>
			<button class="btn btn-sm btn-danger" >Show Summary</button>
		</c:otherwise>
	</c:choose>
	</section>
	<script type="text/javascript">
		function newamt() { 
			if(document.getElementById('quant').value != 0)
			{document.getElementById('amt').value = (document.getElementById('quant').value)*(document.getElementById('amt').value);}
		}	    
	</script>
</body>
</html>